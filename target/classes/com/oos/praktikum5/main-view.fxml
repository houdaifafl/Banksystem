<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oos.praktikum5.MainController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>

  <ListView fx:id="AccountListe" prefHeight="400.0" prefWidth="350.0">
    <contextMenu>
      <ContextMenu fx:id="cmList">
        <items>
          <MenuItem onAction="#auswaehlen" text="Auswählen" />
          <MenuItem onAction="#loeschen" text="Löschen" />
        </items>
      </ContextMenu>
    </contextMenu>
  </ListView>
  <Button onAction="#newAccount" text="new account" />

</VBox>
